<idea-plugin>
  <id>net.samcaldwell.latex</id>
  <name>LaTeX and Bibliography Manager</name>
  <vendor email="sam@example.com">Sam Caldwell</vendor>
  <description>
    LaTeX and Bibliography Manager: author LaTeX with live PDF preview and manage BibTeX entries with context-aware
    forms, validation, and flexible imports (DOI/URL/ISBN/Title/Author). Book/article lookups include OpenLibrary,
    Google Books, Crossref, WorldCat (OCLC Classify), British National Bibliography (BNB), openBD (Japan), and the US
    Library of Congress (LOC), plus PDF metadata extraction. Media lookups include OMDb, TMDb, and MusicBrainz. Includes
    templates and citation tooling for APA/MLA/Chicago contexts.

    Keywords: latex and bibliography manager, LaTeX, BibTeX, bibliography, citation, APA, MLA, Chicago, DOI, DOI.org,
              OpenLibrary, Google Books, Crossref, WorldCat, OCLC, BNB, openBD, Library of Congress, LOC, PDF,
              OMDb, TMDb, MusicBrainz.
  </description>

  <idea-version since-build="242"/>

  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <fileType name="LaTeX" language="LaTeX" extensions="tex" implementationClass="net.samcaldwell.latex.TexFileType"/>
    <fileType name="BibTeX" language="BibTeX" extensions="bib" implementationClass="net.samcaldwell.latex.BibFileType"/>

    <fileEditorProvider implementation="net.samcaldwell.latex.TexFileEditorProvider"/>

    <completion.contributor language="LaTeX" implementationClass="net.samcaldwell.latex.CitationCompletionContributor"/>

    <fileTemplateGroup implementation="net.samcaldwell.latex.TexFileTemplates"/>

    <!-- Syntax highlighting and color settings -->
    <lang.syntaxHighlighterFactory language="LaTeX" implementationClass="net.samcaldwell.latex.TexSyntaxHighlighterFactory"/>
    <lang.syntaxHighlighterFactory language="BibTeX" implementationClass="net.samcaldwell.latex.BibSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="net.samcaldwell.latex.TexColorSettings"/>
    <colorSettingsPage implementation="net.samcaldwell.latex.BibColorSettings"/>

    <projectService serviceImplementation="net.samcaldwell.latex.LatexCompilerService"/>
    <projectService serviceImplementation="net.samcaldwell.latex.BibLibraryService"/>

    <postStartupActivity implementation="net.samcaldwell.latex.CreateBibOnStartup"/>
    <postStartupActivity implementation="net.samcaldwell.latex.MissingCitationsWatcher"/>
    <postStartupActivity implementation="net.samcaldwell.latex.DependencyStartupActivity"/>

    <!-- Inject LaTeX language into Markdown ```latex code fences -->
    <multiHostInjector implementation="net.samcaldwell.latex.MarkdownLatexFenceInjector"/>

    <toolWindow id="Bibliography"
                anchor="right"
                factoryClass="net.samcaldwell.latex.BibliographyToolWindowFactory"
                icon="/icons/bib.svg"/>

    <applicationService serviceImplementation="net.samcaldwell.latex.LatexSecretsService"/>

    <applicationConfigurable id="net.samcaldwell.latex.Secrets"
                             displayName="LaTeX Tools (Secrets)"
                             instance="net.samcaldwell.latex.LatexSecretsConfigurable"/>

    <applicationConfigurable id="net.samcaldwell.latex.Dependencies"
                             displayName="LaTeX Tools (Dependencies)"
                             instance="net.samcaldwell.latex.DependenciesConfigurable"/>

    <applicationConfigurable id="net.samcaldwell.latex.LookupProviders"
                             displayName="LaTeX Tools (Lookup Providers)"
                             instance="net.samcaldwell.latex.LookupProvidersConfigurable"/>
    <notificationGroup id="LaTeX" displayType="BALLOON" isLogByDefault="true"/>
  </extensions>

  <actions>
    <action id="net.samcaldwell.latex.RenderLatexFenceAction"
            class="net.samcaldwell.latex.RenderLatexFenceAction"
            text="Render LaTeX Code Fence"
            description="Compile and preview the current LaTeX code fence">
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
    </action>

    <action id="net.samcaldwell.latex.BibliographySetupAction"
            class="net.samcaldwell.latex.BibliographySetupAction"
            text="Insert Bibliography Setup"
            description="Insert biblatex setup and library.bib reference">
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>

    <action id="net.samcaldwell.latex.InstallDependenciesAction"
            class="net.samcaldwell.latex.InstallDependenciesAction"
            text="Install LaTeX Dependencies"
            description="Install required LaTeX tools (latexmk/pdflatex, biber) after consent">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>
